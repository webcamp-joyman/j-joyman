<div class="container">
  <div class="row">
    <div class="col-6 mx-auto ">
      <h3>ジャンル編集</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-6 mx-auto mt-5">
      <%= form_with model: @genre, url:admin_genre_path do |f| %>
        <%= f.label :name, "ジャンル名", class: 'font-weight-bold' %>
        <%= f.text_field :name, class: "ml-5" %>
        <%= f.submit "変更を保存",class: "btn btn-success ml-5" %>
      <% end %>
    </div>
  </div>
</div>