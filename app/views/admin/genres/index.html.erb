<div class="container">
  <div class="row">
    <div class="col-6 mx-auto text-center">
      <h3>ジャンル一覧・追加</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-6 mx-auto">
      <%= form_with model: @genre, url:admin_genres_path do |f| %>
        <div class="form-group">
          <%= f.label :name, "ジャンル名", class: 'font-weight-bold' %>
          <%= f.text_field :name, class: 'ml-5' %>
          <%= f.submit "新規登録", class: 'btn btn-success ml-5' %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-6 mx-auto">
      <table class="table table-hover">
        <thead class = "thead-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>