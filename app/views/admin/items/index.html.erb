<div class = "container">
<h2>商品一覧</h2>
<%= link_to "NEW", new_admin_item_path, class: 'btn btn-outline-success' %>
  <div class = "row">
    <div class="col">
      <table class = "table table-hover">
        <thead class = "thead-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>ジャンル</th>
            <th>税抜価格</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admin_item_path(item.id) do %>
                <%= item.name %>
              <% end %>
            </td>
            <td><%= item.genre.name %></td>
            <td><%= item.price %></td>
            <td>
              <% if item.is_active? == true %>
                <span class="text-success">販売中</span>
              <% else %>
                <span class="text-danger">販売停止中</span>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= paginate @items %>
    </div>
  </div>
</div>