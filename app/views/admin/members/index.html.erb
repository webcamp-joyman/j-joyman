<div class="container">
  <div class="row">
    <div class="col-lg-4 mb-3">
      <h3>会員一覧</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-8">
      <table class="table">
        <thead class="table-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @members.each do |member| %>
           <tr>
             <td><%= member.id %></td>
             <td>
               <%= link_to admin_member_path(member.id) do %>
                <%= member.last_name %>
                <%= member.first_name %>
               <% end %>
             </td>
             <td><%= member.email %></td>
             <td><%= member.is_valid ? "有効" : "退会" %></td>
           </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @members %>
    </div>
  </div>
</div>