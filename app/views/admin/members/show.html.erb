<div class="container">
  <div class="row">
    <div class="col-lg-4 mb-3">
      <h3><%= @member.last_name %><%= @member.first_name %>さんの会員詳細</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-8">
      <table class="table table-borderless table-hover">
        <tr>
          <th>会員ID</th>
          <td><%= @member.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @member.last_name %> <%= @member.first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @member.last_name_kana %> <%= @member.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @member.post_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @member.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @member.call_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @member.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td><%= @member.is_valid ? "有効" : "退会" %></td>
        </tr>
        <tr>
          <th></th>
          <td>
            <%= link_to "編集する", edit_admin_member(@member.id), class: "btn btn-success mr-3" %>
            <%= link_to "注文履歴一覧を見る", admin_root_path, class: "btn btn-primary" %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
