<div class="container">
  <div class="row">
    <div class="col-lg-4 offset-lg-1 mb-5 ">
      <h3>管理者ログイン</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group row">
          <%= f.label :email, "メールアドレス", class: "col-sm-3" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control col-sm-7' %>
        </div>

        <div class="form-group row">
          <%= f.label :password, "パスワード", class: "col-sm-3" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control col-sm-7 mb-4' %>
        </div>


        <div class="actions">
          <div class="form-group row">
            <div class="col-sm-3"></div>
            <div class="col-sm-7">
              <%= f.submit "ログイン", class: 'btn btn-primary px-4' %>
            </div>
          </div>
        </div>
      <% end %>
      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
