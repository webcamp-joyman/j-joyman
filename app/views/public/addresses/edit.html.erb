<div class="container">
  <div class="row">
    <div class="col-lg-4 offset-lg-1 mb-5">
      <h4>配送先登録/一覧</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-7 mb-4">
      <%= form_with model: @address do |f| %>
       <div class="form-inline mb-2">
        <%= f.label :"郵便番号(ハイフンなし)", class: "mr-auto" %>
        <%= f.text_field :post_code, placeholder: "123456", class: "form-control", style: "width: 30%" %>
       </div>

       <div class="form-inline mb-2">
        <%= f.label :"住所", class: "mr-auto" %>
        <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control", style: "width: 50%" %>
       </div>

       <div class="form-inline mb-2">
        <%= f.label :"宛名", class: "mr-auto" %>
        <%= f.text_field :name, placeholder: "令和道子", class: "form-control", style: "width: 30%" %>
        <div class="form-group ml-3">
          <%= f.submit '変更内容を保存', class: "btn btn-success" %>
        </div>
       </div>
      <% end %>
    </div>
  </div>
</div>