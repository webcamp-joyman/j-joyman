<div class="container">
  <div class="row">
    <div class="col-lg-4 offset-lg-1 mb-5">
      <h4>配送先登録/一覧</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-7 mb-4">
      <%= form_with model: @address do |f| %>
       <div class="form-inline mb-2">
        <%= f.label :"郵便番号(ハイフンなし)", class: "mr-auto" %>
        <%= f.text_field :post_code, placeholder: "123456", class: "form-control", style: "width: 30%" %>
       </div>

       <div class="form-inline mb-2">
        <%= f.label :"住所", class: "mr-auto" %>
        <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control", style: "width: 50%" %>
       </div>

       <div class="form-inline mb-2">
        <%= f.label :"宛名", class: "mr-auto" %>
        <%= f.text_field :name, placeholder: "令和道子", class: "form-control", style: "width: 30%" %>
        <div class="form-group ml-3">
          <%= f.submit '新規登録', class: "btn btn-success" %>
        </div>
       </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-8 mb-4">
      <table class="table table-bordered">
        <thead class="table-light">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
           <tr>
             <td><%= address.post_code %></td>
             <td><%= address.address %></td>
             <td><%= address.name %></td>
             <td>
               <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %>
               <%= link_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
             </td>
           </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>