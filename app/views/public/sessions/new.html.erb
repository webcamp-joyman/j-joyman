<div class="container">
  <div class="row">
    <div class = "col-lg-4 offset-lg-1 mb-5">
      <h3 class="public_session">ログイン</h3>
    </div>
  </div>
  <div class="row">
    <div class = "col-lg-4 offset-lg-1 mb-5">
      <h5 class="public_session">会員の方はこちらからログイン</h5>
    </div>
   </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class = "col-lg-8 mx-auto">
      <table class = "table table-borderless">
        
        <div class="form-group row">
          <%= f.label :"メールアドレス", class: "col-sm-3" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control col-sm-7" %>
        </div>
        
        <div class="form-group row">
          <%= f.label :"パスワード", class: "col-sm-3" %><br />
          <%= f.text_field :password, autocomplete: "current-password", class: "form-control col-sm-7" %>
        </div>
        
        <div class="actions">
          <div class="form-group row">
            <div class="col-sm-3"></div>
            <div class="col-sm-7">
            <%= f.submit "ログイン", class: "btn btn-primary", style: "width: 40%" %>
            </div>
          </div>
        </div>
      </table>
    </div>
  </div>
<% end %>
  <div class="row">
    <div class = "col-lg-4 offset-lg-1 mb-5">
      <h5 class="public_session">会員登録がお済みでない方</h5>
    </div>
   </div>
   <div class="row">
    <div class ="col-lg-8 mx-auto">
      <%= link_to "こちら", new_registration_path(resource_name) %>から新規登録を行ってください。
    </div>
  </div>
</div>