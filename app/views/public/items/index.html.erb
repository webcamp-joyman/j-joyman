 <div class = "container">
  <div class = "row">
    <div class = "col-10">
      <h2>商品一覧 (全<%= @items.count %>件)</h2>
    </div>
  </div>
  <div class = "row">
    <% @items.each do |item| %>
    <div class = "col-3 mx-auto">
      <%= link_to item_path(item.id) do%>
        <%= image_tag item.get_image(200, 200) %><br>
        <%= item.name %>
      <% end %>
      <div class="aa">¥
        <%= item.price %>(税抜き)
      </div>
    </div>
  <% end %>
  </div>
  <%= paginate @items %>
</div>
