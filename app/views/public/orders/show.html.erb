<div class="container">
  <h4>注文履歴詳細</h4>
  <div class="row">
    <div class="col">
      <p>注文情報</p>
      <table class="table table-bordered">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order.post_code %><br><%= @order.address %><br><%= @order.to_name %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.status_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col">
      <p>請求情報</p>
      <table class="table table-bordered">
        <tr>
          <th>商品合計</th>
          <td><%= @order.</td>
        </tr>
      </table>
    </div>
  </div>
</div>