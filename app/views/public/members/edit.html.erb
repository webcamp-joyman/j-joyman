<div class="container">
  <div class="row">
    <div class="col-lg-4 offset-lg-1 mb-5">
      <h4><strong>会員情報編集</strong></h4>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-8 mb-4">
      <%= form_with model: @member, url: mypage_path do |f| %>
       <table class="table table-borderless">
         <tr>
           <th>氏名</th>
           <td><%= f.text_field :last_name, class: "form-control" %></td>
           <td><%= f.text_field :first_name, class: "form-control" %></td>
         </tr>
         <tr>
           <th>フリガナ</th>
           <td><%= f.text_field :last_name_kana, class: "form-control" %></td>
           <td><%= f.text_field :first_name_kana, class: "form-control" %> </td>
         </tr>
         <tr>
           <th>郵便番号</th>
           <td><%= f.text_field :post_code, class: "form-control" %></td>
         </tr>
         <tr>
           <th>住所</th>
           <td colspan="2"><%= f.text_field :address, class: "form-control" %></td>
         </tr>
         <tr>
           <th>電話番号</th>
           <td><%= f.text_field :call_number, class: "form-control" %></td>
         </tr>
         <tr>
           <th>メールアドレス</th>
           <td><%= f.text_field :email, class: "form-control" %></td>
         </tr>
         <tr>
           <th></th>
           <td colspan="2">
             <%= f.submit "編集内容を保存", class: "btn btn-success mr-5", style: "width: 50%" %>
             <%= link_to "退会する", unsubscribe_path, class: "btn btn-danger ml-5" %>
           </td>
         </tr>
       </table>
      <% end %>
    </div>
  </div>
</div>
